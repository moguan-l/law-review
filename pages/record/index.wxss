.media-box__pics {
    overflow: hidden;
    margin: 4px -4px 0;
}
.media-box__pic-item {
    position: relative;
    box-sizing: border-box;
    float: left;
    width: 33.333333%;
    padding-top: 33.333333%;
}
.media-box__pic {
    position: absolute;
    top: 0;
    left: 0;
    box-sizing: border-box;
    padding: 4px;
    width: 100%;
    height: 100%;
}
.media-box__pic image {
    width: 100%;
    height: 100%;
    background-color: #000000;
}
.add-record-bar {
    position: fixed;
    bottom: 15px;
    left: 50%;
    z-index: 999;
    margin-left: -15%;
    width: 30%;
    height: 50px;
    color: #ffffff;
    font-size: 32px;
    line-height: 43px;
    text-align: center;
    background-color: rgba(55, 172, 104, .9);
    border-radius: 25px;
    box-shadow: 0 0 5px rgba(0, 0, 0, .6);
}